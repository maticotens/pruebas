    <!-- Enlace a CSS de Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            margin: 0;
            padding: 0;
            height: 100%; /* Asegura que el body y html ocupen el 100% de la altura */
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        header .navbar-nav .nav-link {
            font-size: 17px !important; /* Ajusta el tamaño de la fuente de los enlaces de navegación en el header */
        }
        nav {
            margin-top: 20px; /* Ajusta el valor según el espacio deseado */
        }

        /*Dropdown*/
        .navbar-light .navbar-nav .nav-link,
        .navbar-light .dropdown-menu {
            background-color: #ffffff;
            color: #1e5552;
            font-size: 16px;
            font-weight: normal;
        }

        .navbar-light .dropdown-menu {
            width: 200px;
        }
        .navbar-light .dropdown-menu a.dropdown-item {
            color: #1e5552;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 16px;
            font-weight: normal;
            width: 200px;

        }

        .navbar-light .dropdown-menu a.dropdown-item:hover {
            background-color: #ffffff;
            margin: 0;
            width: 200px;
        }

        /*fin dropdown*/
        .main-container {
            padding: 30px;
            background-color: white;
        }

        .form-section {
            margin-bottom: 30px;
            border-color: #B8CCC8;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-control {
            margin-bottom: 30px;
            border: 1px solid #1e5552;
        }

        .heladera-card {
            padding: 15px;
            border: 1px solid #B8CCC8;
            border-radius: 5px;
            margin-bottom: 10px;
            background-color: #B8CCC8;
        }

        .heladera-card p {
            margin: 0;
            font-size: 14px;
        }

        .status-box {
            background-color: #e3f2f1;
            padding: 10px;
            border-radius: 5px;
            margin-top: 10px;
        }

        .green-box {
            background-color: #1e5552;
            color: white;
            text-align: center;
            padding: 5px;
            border-radius: 5px;
            margin-top: 10px;
            cursor: pointer;
        }

        .btn-group {
            display: flex;  /*Usar Flexbox para la alineación */
            flex-direction: row; /* Colocar los botones uno al lado del otro */
            justify-content: flex-end; /* Alinear los botones al margen derecho */
            gap: 10px; /* Espacio entre los botones */
            margin: 10px 0 10px 800px; /* Margen superior e inferior de 20px y margen izquierdo de 20px */
        }

        .btn {
            border-radius: 10px; /* Bordes redondeados */
            padding: 10px 10px; /* Espaciado interno para que se vean mejor */
            width: 150px; /* Ancho fijo, ajusta según tus necesidades */
            margin-bottom: 10px; /* Espacio entre los botones */
            border: none; /* Eliminar borde predeterminado */
            cursor: pointer; /* Cambiar cursor al pasar sobre el botón */
            font-size: 16px; /* Tamaño de fuente */
        }

        .btn-cancel {
            background-color: #B8CCC8;
            color: black;
        }

        .btn-submit {
            background-color: #1e5552;
            color: white;
        }

        h1, h2, h3, h5, h6 {
            font-size: 19px; /* Ajusta el tamaño de la fuente de los headers */
            font-weight: bold; /* Ajusta el peso de la fuente de los headers */
        }

        h4 {
            font-size: 16px; /* Ajusta el tamaño de la fuente de los headers */
        }

        h3 {
            margin: 0; /* Elimina márgenes por defecto */
            white-space: nowrap; /* Evita que el texto haga salto de línea */
        }

        h5 {
            margin: 0; /* Elimina márgenes por defecto */
            white-space: nowrap; /* Evita que el texto haga salto de línea */
            color: white; /* Color de texto */
        }

        .footer-bg {
            background-color: #B7C9C7; /* Color de fondo */
            padding: 20px 0; /* Espaciado superior e inferior */
        }
        .social-icons a {
            margin-right: 15px; /* Espacio entre iconos de redes sociales */
            color: white; /* Color de texto para iconos */
        }
        .footer-link {
            color: white; /* Color de texto para enlaces */
            text-decoration: none; /* Eliminar subrayado */
        }
        .footer-link:hover {
            text-decoration: underline; /* Subrayar al pasar el mouse */
        }

        .social-icon {
            margin-right: 10px; /* Espacio entre el ícono y el texto */
        }
        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 10px;
        }

    </style>
</head>

<body>
