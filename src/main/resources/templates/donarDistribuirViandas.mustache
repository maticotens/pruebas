                        <a class="dropdown-item" href="/misReportes">Mis reportes</a>
                        <a class="dropdown-item" href="#">Configuración</a>
                        <a class="dropdown-item" href="/logout">Cerrar sesión</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</header>

<main>
    <div class="container main-container">
        <h1>Distribuir Viandas</h1>
        <p></p>
        <form id="distribuirForm" action="/donarDistribuirViandas" method="post">
            <div style="display: inline-flex; gap: 20px">
                <!-- Heladera origen -->
                <div class="form-section">
                    <h4>Heladera origen</h4>
                    <!-- Input eliminado -->
                    <!--<input type="text" id="heladera-origen" class="form-control" rows="1" placeholder="Heladera Medrano UTN">-->
                    <div class="heladera-card">
                        <strong>{{heladera1}}</strong>
                        <p>{{direccion1}}</p>
                        <p><strong>Estado:</strong> {{estado1}}</p>
                        <p><strong>Necesita traslado de:</strong>{{disponibilidad1}}</p>
                        <div class="green-box">
                           <a href="/mapaHeladerasDistribucionOrigen?heladera1={{heladera1}}&direccion1={{direccion1}}&estado1={{estado1}}&disponibilidad1={{disponibilidad1}}&heladera2={{heladera2}}&direccion2={{direccion2}}&estado2={{estado2}}&disponibilidad2={{disponibilidad2}}" style="text-decoration: none; color: inherit;">Elegir otra Heladera</a>
                        </div>
                    </div>
                </div>
                <!-- Heladera destino -->
                <div class="form-section">
                    <h4>Heladera destino</h4>
                    <!-- Input eliminado -->
                    <!--<input type="text" class="form-control" id="heladera-destino" placeholder="Heladera Medrano UTN">-->
                    <div class="heladera-card">
                        <strong>{{heladera2}}</strong>
                        <p>{{direccion2}}</p>
                        <p><strong>Estado:</strong> {{estado2}}</p>
                        <p><strong>Disponibilidad:</strong>{{disponibilidad2}}</p>
                        <div class="green-box">
                          <a href="/mapaHeladerasDistribucionDestino?heladera1={{heladera1}}&direccion1={{direccion1}}&estado1={{estado1}}&disponibilidad1={{disponibilidad1}}&heladera2={{heladera2}}&direccion2={{direccion2}}&estado2={{estado2}}&disponibilidad2={{disponibilidad2}}" style="text-decoration: none; color: inherit;">Elegir otra Heladera</a>
                        </div>
                    </div>
                </div>
                <div>
                    <!-- Motivo -->
                    <div class="form-section">
                        <h4>Motivo</h4>
                        <select name="motivoDistribucion" id="motivo" class="form-control">
                            <option value="1">DESPERFECTO</option>
                            <option value="2">FALTA DE VIANDAS</option>
                        </select>
                    </div>
                    <!-- Cantidad de viandas -->
                    <div class="form-section">
                        <h4>Cantidad de viandas</h4>
                        <select name="cantidadViandas" id="cantidad" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-cancel">Cancelar</button>
                <button type="submit" class="btn btn-submit" onclick="submitForm()">Distribuir</button>
                {{#errorDistribuir}}
                    <div class="error-message">{{errorDistribuir}}</div>
                {{/errorDistribuir}}

            </div>
        </form>
        <script>
        function submitForm() {
        var form = document.getElementById('distribuirForm');
        if (form.checkValidity()) {
            form.submit();
            window.location.href = '/graciasPorDonar';
        } else {
            form.reportValidity();
        }
    }
        </script>
    </div>
</main>

