            border-radius: 10px;
        }

        .back-arrow {
            display: flex;
            align-items: center;
            font-size: 16px;
            text-decoration: none;
            color: black;
            margin: 20px;
        }

        main {
            flex-grow: 1;
            padding: 20px;
            background-color: white;
        }

        .register-container {
            max-width: 600px;
            margin: 50px auto;
            width: 100%;
            background-color: white;
            color: #1e5552;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .register-container h2 {
            margin-bottom: 20px;
            color: #1e5552;
        }

        .register-container input, .register-container select {
            width: calc(100% - 20px);
            padding: 10px;
            margin: 10px 0;
            color: #1e5552;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .register-container button {
            width: 100%;
            padding: 15px;
            background-color: #1e5552;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

        .register-container button:hover {
            background-color: #2e4372;
        }

        .register-container label {
            display: block;
            text-align: left;
            margin-bottom: 5px;
        }

        .register-container .terms {
            margin-top: 10px;
            text-align: left;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .register-container .terms input[type="checkbox"] {
            margin: 0;
        }

        .volver-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin-bottom: 20px;
            margin-left: 20px;
            margin-top: 20px;
        }

        .volver-link {
            color: #1e5552;
        }
        .date-fields {
            display: flex;
            justify-content: space-between;
            gap: 10px;
            margin: 10px 0;
        }

        .date-fields select {
            width: 30%;
            font-size: 14px;
        }
        h5 {
            margin: 0; /* Elimina márgenes por defecto */
            white-space: nowrap; /* Evita que el texto haga salto de línea */
            color: white; /* Color de texto */
        }

        .footer-bg {
            background-color: #B7C9C7; /* Color de fondo */
            padding: 20px 0; /* Espaciado superior e inferior */
        }
        .social-icons a {
            margin-right: 15px; /* Espacio entre iconos de redes sociales */
            color: white; /* Color de texto para iconos */
        }
        .footer-link {
            color: white; /* Color de texto para enlaces */
            text-decoration: none; /* Eliminar subrayado */
        }
        .footer-link:hover {
            text-decoration: underline; /* Subrayar al pasar el mouse */
        }

        .social-icon {
            margin-right: 10px; /* Espacio entre el ícono y el texto */
        }
        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 10px;
        }
        .labelDesplegable {
            font-size: 1.25rem;
            font-weight: bold;
            width : 70px;
            height : 30px;
        }
    </style>
</head>
<body>
